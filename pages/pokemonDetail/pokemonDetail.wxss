.body {
  display: block;
  box-sizing: border-box;
  min-height: 100vh;
  padding-top: 180rpx;
  background-color: #FFE57A;
}

.pokemon-detail .detail-basic {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-basic .pokemon-animate {
  display: block;
}

.pokemon-animate .pokemon-animate-image {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 0;
}

.detail-basic .pokemon-info {
  display: block;
  box-sizing: border-box;
  width: 690rpx;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-radius: 32rpx;
}

.pokemon-info p {
  display: block;
  line-height: 52rpx;
  font-size: 30rpx;
}

.pokemon-info .content {
  color: #333;
}

.pokemon-detail .detail-stock {
  display: block;
  box-sizing: border-box;
  width: 690rpx;
  margin: 16rpx auto 0 auto;
  padding: 32rpx 32rpx 80rpx 32rpx;
  background-color: #fff;
  border-radius: 32rpx;
}

.detail-stock .stock-title {
  font-weight: bold;
  font-size: 36rpx;
}

.detail-stock .stock-box {
  display: flex;
  justify-content: space-between;
  margin-top: 28rpx;
}

.detail-stock .stock-box .stock-item {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  width: 60rpx;
  height: 300rpx;
  background-color: #f5f5f5
}

.stock-item .stock-item-value {
  width: 100%;
  height: 0;
  background-color: #b3eafe;
  box-shadow: 0px 0px 10px 1px rgb(179 234 254 / 40%);
  transition: all .5s;
}

.stock-item .stock-item-label {
  position: absolute;
  bottom: -48rpx;
  font-size: 28rpx;
  color: #333;
}