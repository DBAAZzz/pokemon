.body {
  display: block;
  height: 100vh;
  background-image: url(http://175.178.74.222:9001/images/more_bg.png);
  background-size: 100% 1680rpx;
  background-repeat: no-repeat;
  overflow: auto;
}

.box {
  display: inline-block;
  margin-left: 60rpx;
  margin-top: 200rpx;
  background-size: cover;
}

.text {
  display: inline-block;
  width: 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 60rpx;
  border-right: 10rpx solid orange;
  font-weight: bold;
  overflow: hidden;
  animation: typing 1s steps(20, end) forwards, blink .8s infinite;
}

@keyframes typing {
  from { width: 0 }
  to { width: 100% }
}

@keyframes blink {
  from { border-color: transparent }
  to { border-color: orange; }
}